<% provide(:title, t(:new_user)) %>
<h1><%= t(:new_user) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name, t(:name) %>
      <%= f.text_field :name %>

      <%= f.label :email, t(:email) %>
      <%= f.text_field :email %>

      <%= f.label :password, t(:password) %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t(:confirmation) %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t(:create_user), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
