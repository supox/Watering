<% provide(:title, @user.name) %>
<h1> <%= @user.name %> </h1>

<% if @user.sprinklers.any? %>
<h3><%= t(:sprinklers) %></h3>
<ul class="sprinklers">
	<%= render partial: 'shared/sprinkler', collection: @user.sprinklers %>
</ul>

<% end %>

<% if current_user.admin? && !current_user?(user) %>
| <%= link_to "delete", user, method: :delete,
data: { confirm: "You sure?" } %>
<% end %>
