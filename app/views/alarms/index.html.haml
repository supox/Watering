- provide(:title, t(:all_alarms))
%h1= t(:all_alarms)

= will_paginate

%ul.alarms
  - @alarms.each do |alarm|
    %li
      %div.btn-toolbar
        %span.description
          =alarm.condition_type.text + " " + alarm.alarm_value.to_s 
        %div.btn-group
          %button.btn.btn-primary.dropdown-toggle.entry{ "data-toggle" => "dropdown" }
            = t(:edit) + " "
            %span.caret
          %ul.dropdown-menu
            %li= link_to t(:delete), sprinkler_sensor_alarm_path(@sprinkler,@sensor,alarm),
              method: :delete, data: { confirm: t(:you_sure?) }
            %li= link_to t(:edit), edit_sprinkler_sensor_alarm_path(@sprinkler,@sensor,alarm)

= will_paginate

= link_to t(:new_alarm), new_sprinkler_sensor_alarm_path(@sprinkler,@sensor), class:("action btn btn-primary")
