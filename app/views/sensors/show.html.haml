-provide(:title, t(:sensor_readings) )
%h1
  =t(:sensor_readings) + " - "
  =@sensor.sensor_type.text
  
%div.btn-toolbar
  %div.btn-group
    %button.btn.btn-primary.dropdown-toggle.event{ "data-toggle" =>"dropdown"}
      =t(:edit)
      %span#caret
    %ul.dropdown-menu
      %li= link_to t(:new_alarm), new_sprinkler_sensor_alarm_path(@sprinkler,@sensor)
      %li= link_to t(:to_all_alarms), sprinkler_sensor_alarms_path(@sprinkler,@sensor)
      %li= link_to t(:edit), edit_sprinkler_sensor_path(@sprinkler,@sensor)
      %li= link_to t(:delete), sprinkler_sensor_path(@sprinkler,@sensor), method: :delete, data: { confirm: t(:you_sure?) }, title: @sensor.identifier

=show_graph(@data, t(:sensor_readings))

%div.time_selector
  - [1,2,3,7,30,365].each do |time|
    = link_to time, {action: "show", id: @sensor_id, time_ago: time}, remote: true
    
= link_to t(:back), @sprinkler